{
  "extends": [
    "config:recommended"
  ],
  "hostRules": [
    {
      "hostType": "npm",
      "matchHost": "npm.pkg.github.com",
      "token": "{{ secrets.GH_PKG_TOKEN }}"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "@sterashima78/ts-md-unplugin",
        "@sterashima78/ts-md-tsc"
      ],
      "enabled": false
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "pinDigests": true
    }
  ]
}
